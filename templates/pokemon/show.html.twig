{% extends 'base.html.twig' %}

{% block title %}Pokemon{% endblock %}

{% block body %}
    <h1>Pokemon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pokemon.id }}</td>
            </tr>
            <tr>
                <th>Nameen</th>
                <td>{{ pokemon.nameen }}</td>
            </tr>
            <tr>
                <th>Namefr</th>
                <td>{{ pokemon.namefr }}</td>
            </tr>
            <tr>
                <th>Artwork</th>
                <td><img src='{{ asset("images/artwork/"~ pokemon.artwork) }}' alt="{{ pokemon.nameen }}"/></td>
            </tr>
            <tr>
                <th>Icon</th>
                <td><img src='{{ asset("images/icon/"~ pokemon.icon) }}' alt="{{ pokemon.nameen }}"/></td>
            </tr>
            <tr>
                <th>Types</th>
                {% for types in pokemon.types %}
                <td><img src='{{ asset("images/type/"~ types.icon) }}' alt="{{ types.name }}"/></td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pokemon_index') }}">back to list</a>

    <a href="{{ path('pokemon_edit', {'id': pokemon.id}) }}">edit</a>

    {{ include('pokemon/_delete_form.html.twig') }}
{% endblock %}
